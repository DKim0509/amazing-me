<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amazingme.activities.app.ChildRegistrationActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="461dp"
        android:layout_height="407dp"
        app:srcCompat="@drawable/amazingmechildregistration"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/child_registration_sex_text_view"
        android:layout_width="214dp"
        android:layout_height="69dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Sex"
        android:textColor="@color/amazing_me_blue"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/date_of_birth_button" />

    <Spinner
        android:id="@+id/child_registration_sex_spinner"
        android:entries="@array/sex_options"
        android:layout_width="354dp"
        android:layout_height="93dp"
        android:background="@drawable/spinner_border"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_text_view" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="371dp"
        android:layout_height="192dp"
        android:text="Child Registration"
        android:textAlignment="center"
        android:textColor="@color/amazing_me_blue"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/child_registration_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/amazing_me_green"
        android:textSize="50sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/child_registration_last_name"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/amazing_me_green"
        android:textSize="50sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="58dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_first_name" />


    <Button
        android:id="@+id/child_registration_done_button"
        android:layout_width="239dp"
        android:layout_height="94dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Done!"
        android:textColor="@color/amazing_me_white"
        android:textSize="20sp"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/child_registration_add_another_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.152"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_spinner" />

    <Button
        android:id="@+id/child_registration_add_another_button"
        android:layout_width="322dp"
        android:layout_height="91dp"
        android:backgroundTint="@color/amazing_me_white"
        android:text="Add Another Child"
        android:textColor="@color/amazing_me_blue"
        android:textSize="20sp"
        android:layout_marginLeft="162dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_sex_spinner" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/date_of_birth_button"
        android:layout_width="390dp"
        android:layout_height="84dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:elevation="11dp"
        android:onClick="showDatePickerDialog"
        android:text="Click To Enter Date of Birth"
        android:textColor="@color/amazing_me_white"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/child_registration_last_name"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>