<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="amazingme.activities.games.AnimalPictureGame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:text="Button"
            android:textSize="20sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="1062dp" />

        <Button
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/answer4"
            android:text="Button"
            android:textSize="20sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="371dp"
            tools:layout_editor_absoluteY="962dp" />

        <Button
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/answer3"
            android:text="Button"
            android:textSize="20sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="864dp" />

        <Button
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_above="@+id/answer2"
            android:text="Button"
            android:textSize="20sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="771dp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_above="@+id/question"
            android:layout_alignLeft="@+id/question"
            android:layout_alignStart="@+id/question"
            android:layout_marginBottom="17dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="24dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="421dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_above="@+id/answer1"
            android:gravity="center"
            android:text="TextView"
            android:textSize="30sp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="63dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="600dp"
            android:layout_height="550dp"
            android:layout_above="@+id/score"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/amazingbackground" />

        <TextView
            android:id="@+id/title"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="TextView"
            android:textSize="30dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="421dp"
            tools:layout_editor_absoluteY="dp" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="TextView"
            android:textSize="30dp"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="421dp"
            tools:layout_editor_absoluteY="dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/timer_text"
            android:layout_alignBottom="@+id/timer_text"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="600 seconds"
            android:textSize="30dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/startBtn"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_below="@+id/title_text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:text="Start"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/title_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/title"
            android:layout_alignEnd="@+id/startBtn"
            android:layout_alignRight="@+id/startBtn"
            android:text="Animal Picture Game"
            android:textColor="@color/amazing_me_blue"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_text2"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image"
            android:layout_alignStart="@+id/image"
            android:layout_below="@+id/title_text"
            android:layout_marginTop="14dp"
            android:text="If the time elapsed, the game will be done as well."
            android:textColor="@color/amazing_me_blue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_text3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="The goal of this game is that you solve all the 17 questions in 10 minutes. If you, however, get an incorrect answer, the game will be done right away."
            android:textColor="@color/amazing_me_blue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_text3"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="In this game, you're supposed to answer each question based on a given picture."
            android:textColor="@color/amazing_me_blue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/title_text1"
            android:layout_toLeftOf="@+id/timer"
            android:layout_toStartOf="@+id/timer"
            android:text="Time Left:"
            android:textSize="30dp"
            android:visibility="invisible" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>