<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin" tools:context = ".MainActivity"
    android:background="@drawable/amazingbackgroundfix">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:textColor="@color/amazing_me_blue"
        android:textSize="35dp" />


    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:inputType = "text"
        android:id = "@+id/firstNameEditText"
        android:hint = "First Name"
        android:focusable = "true"
        android:textColorHighlight = "#5eb41b"
        android:textColorHint = "#5eb41b"
        android:layout_above="@+id/lastNameEditText"
        android:layout_alignLeft="@+id/lastNameEditText"
        android:layout_alignStart="@+id/lastNameEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:hint="Last Name"
        android:inputType="text"
        android:textColorHighlight="#5eb41b"
        android:textColorHint="#5eb41b"
        android:layout_above="@+id/emailEditText"
        android:layout_alignLeft="@+id/emailEditText"
        android:layout_alignStart="@+id/emailEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHighlight="#5eb41b"
        android:textColorHint="#5eb41b"
        android:layout_above="@+id/passwordEditText"
        android:layout_alignLeft="@+id/passwordEditText"
        android:layout_alignStart="@+id/passwordEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordEditText"
        android:textColorHint="#5eb41b"
        android:hint="Password"
        android:layout_above="@+id/doctorEmailEditText"
        android:layout_alignLeft="@+id/doctorEmailEditText"
        android:layout_alignStart="@+id/doctorEmailEditText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="next"
        android:textColor="@color/amazing_me_white" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nextBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:backgroundTint="@color/amazing_me_blue"
        android:text="Back"
        android:textColor="@color/amazing_me_white" />

    <EditText
        android:id="@+id/doctorEmailEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Doctor's Email"
        android:inputType="textPersonName"
        android:textColor="@color/colorAccent"
        android:textColorHighlight="#5eb41b"
        android:textColorHint="#5eb41b"
        android:layout_above="@+id/nextBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
